package com.example.demo.controller;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.cloud.aws.messaging.core.QueueMessagingTemplate;
import org.springframework.cloud.aws.messaging.listener.annotation.*;
import org.springframework.messaging.support.MessageBuilder;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/sqs")
public class SqsController {
	
	private static final Logger LOG = LoggerFactory.getLogger(SqsController.class);
	
	@Autowired
	private QueueMessagingTemplate queueMessagingTemplate;
	
	@Value("https://sqs.us-east-1.amazonaws.com/273001999516/sqs")
	private String sqsEndPoint;
	
	
	@GetMapping 
	public void sendMessage(){
		queueMessagingTemplate.send(sqsEndPoint, MessageBuilder.withPayload("new message 2").build());
	}
//	
//	@SqsListener("sqs-dl") 
//	public void getMessage(String messagex){
//		LOG.info("from aws:" + messagex);
//	}


}
